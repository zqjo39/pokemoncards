extends layout

block content
  h1= title
  p Welcome to #{title}

  div.container
    div.card
      div.card-head
        div.card-name Eevee
        div.card-hp 50HP
        div.card-type 0
      div.card-body
        img.card-picture(src = "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQ3ShF-FL8m6XI1Qz7zIq0Wrvo5p0rvrMdrFA&usqp=CAU")
        div.card-pop NO. 133 Evolution Pokemon HT: 1' WT: 14.3 lbs.
      div.card-foot
        div.card-moves
          div.card-move-one
            div.card-move-energy 0 0
            div.card-move-name Bite
              div.card-move-desc
            div.card-move-dam 30
          div.card-move-two
            div.card-move-energy 0
            div.card-move-name Tackle
              div.card-move-desc
            div.card-move-dam 20
        div.card-bar
          div.card-weak Weakness
            div.card-energy 0
          div.card-strong Resistance
            div.card-energy 0
          div.card-retreat Retreat
            div.card-energy 0 0
